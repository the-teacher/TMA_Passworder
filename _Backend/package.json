{
  "name": "hamster-pass-backend",
  "packageManager": "yarn@4.7.0",
  "type": "commonjs",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "zod": "^3.24.2"
  },
  "scripts": {
    "start": "nodemon --ext ts --exec tsx src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --coverage --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "#db:migrator:development": "migration commands for development environment",
    "new:migrate": "tsx src/libs/the-mirgator/src/createMigrationRunner.ts application",
    "db:create": "tsx src/libs/the-mirgator/src/createSqliteDatabaseRunner.ts application/database",
    "db:migrate": "tsx src/libs/the-mirgator/src/migrationsRunner.ts up application/database ./src/db/migrations/application",
    "db:migrate:down": "tsx src/libs/the-mirgator/src/migrationsRunner.ts down application/database ./src/db/migrations/application",
    "db:drop": "tsx src/libs/the-mirgator/src/dropSqliteDatabaseRunner.ts application/database",
    "#db:migrator:test": "migration commands for test environment",
    "db:create:test": "NODE_ENV=test yarn db:create",
    "db:migrate:test": "NODE_ENV=test yarn db:migrate",
    "db:migrate:down:test": "NODE_ENV=test yarn db:migrate:down",
    "db:drop:test": "NODE_ENV=test yarn db:drop",
    "db:prepare:test": "yarn db:create:test && yarn db:migrate:test"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/cookie-parser": "^1",
    "@types/cors": "^2",
    "@types/express": "^5.0.0",
    "@types/identity-obj-proxy": "^3",
    "@types/jest": "^29.5.14",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.22.0"
  }
}
