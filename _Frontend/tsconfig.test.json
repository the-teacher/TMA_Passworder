{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "types": ["jest", "@testing-library/jest-dom", "node", "vite/client"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@test/*": ["test/*"],
      "@routes/*": ["src/routes/*"],
      "@ui-kit/*": ["src/ui-kit/*"],
      "@mocks/*": ["src/mocks/*"],
      "@story/*": [".storybook/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupTests.ts",
    "src/types",
    "test/**/*.ts"
  ]
}
